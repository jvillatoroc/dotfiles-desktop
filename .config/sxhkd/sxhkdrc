#
# wm independent hotkeys
#

# program launcher
super + @space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# multimedia key bindings
XF86AudioMute
	pamixer -t; pkill -RTMIN+10 dwmblocks

super + ctrl + m
	pamixer -t; pkill -RTMIN+10 dwmblocks

XF86AudioMicMute
	amixer sset Capture toggle; pkill -RTMIN+10 dwmblocks

super + ctrl + M
	amixer sset Capture toggle; pkill -RTMIN+10 dwmblocks

XF86AudioLowerVolume
	pamixer --allow-boost -d 2; pkill -RTMIN+10 dwmblocks

super + ctrl + Down
	pamixer --allow-boost -d 2; pkill -RTMIN+10 dwmblocks

XF86AudioRaiseVolume
	pamixer --allow-boost -i 2; pkill -RTMIN+10 dwmblocks

super + ctrl + Up
	pamixer --allow-boost -i 2; pkill -RTMIN+10 dwmblocks

# launch neomutt
super + shift + m
	st -e neomutt

# launch newsboat
super + shift + n
	st -e newsboat

# launch file manager
super + shift + f
	st -e lf
