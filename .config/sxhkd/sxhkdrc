#
# wm independent hotkeys
#

# program launcher
super + @space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# multimedia key bindings
XF86AudioMute
	amixer sset Master toggle

super + ctrl + m
	amixer sset Master toggle

XF86AudioMicMute
	amixer sset Capture toggle

super + ctrl + M
	amixer sset Capture toggle

XF86AudioLowerVolume
	amixer sset Master 2%-

super + ctrl + Down
	amixer sset Master 2%-

XF86AudioRaiseVolume
	amixer sset Master 2%+

super + ctrl + Up
	amixer sset Master 2%+

# launch neomutt
super + shift + m
	st -e neomutt

# launch newsboat
super + shift + n
	st -e newsboat

# launch file manager
super + shift + f
	st -e ranger
