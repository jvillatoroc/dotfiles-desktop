# basic binds

#super + Return
#	$TERMINAL

#super + d
#	dmenu_run

XF86AudioMute
	amixer sset Master toggle

XF86AudioLowerVolume
	amixer sset Master 2%-

XF86AudioRaiseVolume
	amixer sset Master 2%+

XF86AudioMicMute
	amixer sset Capture toggle

super + ctrl + m
	amixer sset Master toggle

super + ctrl + Down
	amixer sset Master 2%-

super + ctrl + Up
	amixer sset Master 2%+

super + ctrl + M
	amixer sset Capture toggle
