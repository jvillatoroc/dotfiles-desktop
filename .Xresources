! make underline lines look different ----

!URxvt.underlineColor:   light_gray

! geometry etc settings ---

! URxvt.geometry:         154x36
URxvt.loginShell:       false
URxvt.meta:             ignore
URxvt.utmpInhibit:      true

! Large scrollback buffer ----

URxvt.saveLines:        8192

! Use visual bell, STOP THE INSANITY! ----

URxvt.visualBell:       true

! don t hack me, brah... ----

URxvt.insecure:         true

