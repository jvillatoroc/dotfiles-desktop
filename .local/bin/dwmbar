#!/bin/sh

getforecast() { ping -q -c 1 1.1.1.1 >/dev/null || exit 1
curl -s "wttr.in" > $HOME/.local/share/weatherreport || exit 1 ; }

## sed '13q;d' "$HOME/.local/share/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " â„",$1 "Â°","ğŸŒ",$2 "Â°"}' ;}

showweather() { printf "%s" "$(sed '16q;d' "$HOME/.local/share/weatherreport" | grep -wo "[0-9]*%" | sort -n | sed -e '$!d' | sed -e "s/^/â˜” /g" | tr -d '\n')"
	sed '13q;d' "$HOME/.local/share/weatherreport" | grep -o "m\\(-\\)*[0-9]\\+" | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " â„",$1 "Â°","ğŸŒ",$2 "Â°"}' ;}


while xsetroot -name "` acpi | awk '{ print ($3 == "Discharging,") ? "ğŸ”‹ " $4 $5 : "ğŸ”Œ " $4 }' | sed 's/,/\ /g' ` \
	` free -h | grep Mem: | awk '{ print $4; }' ` \
	` showweather ` \
	` date +"%a %Y-%m-%d %R"` `uptime | sed 's/.*,//' `"
do
	sleep 1m
done &

